#include<stdio.h>
#include<string.h>
int main()
{
	char string[30];int k;
	printf("enter the plain text:");
	gets(string);
	printf("enter the key value :");
	scanf("%d",&k);
	int l=strlen(string);
	int i;
	for(i=0;string[i]!='\0';i++)
{
	string[i] +=k;
}
printf(" the cipher text is :");
for(i=0;string[i]!='\0';i++)
{
	printf("%c",string[i]);
}
}
